{
  "name": "lambda-nodejs-typescript",
  "version": "1.0.0",
  "description": "Generic Boilerplate for AWS Lambda with Nodejs and TypeScript",
  "author": "Andreas Straub",
  "main": "handler.js",
  "scripts": {
    "start": "serverless offline start --location .webpack/service",
    "test": "mocha --timeout 10000 --require ts-node/register --reporter mochawesome \"test/**/*.spec.ts\"",
    "build": "serverless package",
    "deploy-dev": "serverless deploy -s dev",
    "deploy-test": "serverless deploy -s test",
    "deploy-prod": "serverless deploy -s prod",
    "lint": "tslint --project tsconfig.lint.json",
    "lint-fix": "tslint --project tsconfig.lint.json --fix",
    "format": "prettier \"**/*.{ts,ts,js,json,md}\" --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "aws-lambda": "^0.1.2",
    "aws-xray-sdk": "^2.1.0",
    "source-map-support": "^0.5.6",
    "tracer": "^0.9.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.18",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^8.10.38",
    "@types/sinon": "^7.0.6",
    "aws-sdk": "^2.410.0",
    "aws-sdk-mock": "^4.3.1",
    "aws-ses-local": "^1.3.0",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "mocha": "^5.2.0",
    "mochawesome": "^3.1.1",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "serverless": "^1.38.0",
    "serverless-http-invoker": "^0.8.6",
    "serverless-offline": "^4.7.0",
    "serverless-offline-scheduler": "^0.3.7",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-pseudo-parameters": "^2.2.0",
    "serverless-stage-manager": "^1.0.5",
    "serverless-webpack": "^5.1.1",
    "sinon": "^7.2.4",
    "stream-string": "^2.0.1",
    "ts-loader": "^4.2.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.0",
    "tslint-config-prettier": "^1.18.0",
    "typemoq": "^2.1.0",
    "typescript": "^2.9.2",
    "webpack": "^4.29.5",
    "webpack-node-externals": "^1.7.2"
  }
}
